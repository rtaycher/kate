   <contexts>
      <context attribute="Normal Text" lineEndContext="#stay" name="TopLevel">
         <StringDetect attribute="Comment" context="ml_comment" String="/*" 
               beginRegion="comment"/>
         <RegExpr attribute="Comment" context="comment" String="^[ ]*[*]" />
         <StringDetect attribute="Comment" context="comment" String="//" />
         <DetectChar attribute="String" context="string" char="&quot;" />
         <DetectChar attribute="String" context="stringc" char="'" />
         <DetectChar attribute="Operator" context="logic" char="." />
         <DetectChar attribute="Operator" context="#stay" char=":"/>
         <DetectChar attribute="Operator" context="#stay" char="="/>
         <DetectChar attribute="Operator" context="#stay" char="!"/>
         <DetectChar attribute="Keyword" context="#stay" char="@"/>
         <DetectChar attribute="Keyword" context="#stay" char="?"/>
         
         <StringDetect String="procedure " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="ProcOrFunc" />
         <StringDetect String="function " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="ProcOrFunc" />
         <StringDetect String="method " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="ProcOrFunc" />
         <RegExpr String="^return ?" attribute="Keyword" context="#stay"  
                insensitive="TRUE" endRegion="ProcOrFunc" />
         
         <RegExpr String="^[\t ]*CLASS " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="CLASS" />
         <RegExpr String="^[\t ]*ENDCLASS *$" attribute="Keyword" context="#stay"  
                insensitive="TRUE" endRegion="CLASS" />
                
         <RegExpr String="^[\t ]*DO +WHILE " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="DOWHILE" />
         <RegExpr String="^[\t ]*enddo *$" attribute="Keyword" context="#stay"  
                insensitive="TRUE" endRegion="DOWHILE" />
         
         <RegExpr String="^[\t ]*DO +CASE " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="DOCASE" />
         <RegExpr String="^[\t ]*endcase *$" attribute="Keyword" context="#stay"  
                insensitive="TRUE" endRegion="DOCASE" />
         
         <RegExpr String="^[\t ]*FOR " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="FORNEXT" />
         <RegExpr String="^[\t ]*next *$" attribute="Keyword" context="#stay"  
                insensitive="TRUE" endRegion="FORNEXT" />
         
         <RegExpr String="^[\t ]*SWITCH " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="SWITCH" />
         <RegExpr String="^[\t ]*ENDSWITCH *$" attribute="Keyword" context="#stay"  
                insensitive="TRUE" endRegion="SWITCH" />

         <RegExpr String="^[\t ]*if " attribute="Keyword" context="#stay"  
                insensitive="TRUE" beginRegion="IF" />
         <RegExpr String="^[\t ]*endif *$" attribute="Keyword" context="#stay" 
            insensitive="TRUE" endRegion="IF"/>

         <keyword attribute="Keyword" context="#stay" String="keywords" />
         <keyword attribute="Keyword" context="#stay" String="set_commands" />
         <keyword attribute="Function" context="#stay" String="functions" />
         <keyword attribute="Preprocessor" context="#stay" String="pragma" />
         <RegExpr attribute="Operator" context="#stay" String="->" />
         <RegExpr attribute="Number" context="#stay" String="[0-9]+" />
      </context>

      <context attribute="Comment" lineEndContext="#pop" name="comment"/>

      <context attribute="Comment" lineEndContext="#stay" name="ml_comment">
         <StringDetect attribute="Comment" context="#pop" String="*/" 
            endRegion="comment"/>
      </context>

      <context attribute="String" lineEndContext="#pop" name="string">
         <DetectChar attribute="String" context="#pop" char="&quot;" />
      </context>
      <context attribute="String" lineEndContext="#pop" name="stringc">
         <DetectChar attribute="String" context="#pop" char="'" />
      </context>

      <context attribute="Operator" lineEndContext="#pop" name="logic">
         <DetectChar attribute="Operator" context="#pop" char="." />
      </context>
   </contexts>

